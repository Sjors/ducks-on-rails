<h2>Listing species</h2>
Click on a duck to continue...
<table>
<% for species in @species %>
  <tr>
    <td>
      <%= link_to "<img src='/images/species/#{species.id}.jpg' alt='#{species.id}'>",:controller => 'gchart',:action => 'capturesperyear' , :species_id => species.id %>
    </td>
    
    <td>
        <%=link_to "#{species.id}",:controller => 'gchart', :action => 'capturesperyear' , :species_id => species.id%> (
        <%=species.name_nl%> /
        <%=species.name_en%> ) <br>
        Captured at least <%= species.CaptureTotal%> times in The Netherlands<br>
    </td>
    <td></td>    
  </tr>
<% end %> 
</table>
